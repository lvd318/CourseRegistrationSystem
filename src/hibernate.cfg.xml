<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/courseregistration?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="courseregistrationsystem/entity/RegisterSession.hbm.xml"/>
    <mapping resource="courseregistrationsystem/entity/Account.hbm.xml"/>
    <mapping resource="courseregistrationsystem/entity/Course.hbm.xml"/>
    <mapping resource="courseregistrationsystem/entity/Student.hbm.xml"/>
    <mapping resource="courseregistrationsystem/entity/StudentCourse.hbm.xml"/>
    <mapping resource="courseregistrationsystem/entity/Subject.hbm.xml"/>
    <mapping resource="courseregistrationsystem/entity/Semester.hbm.xml"/>
    <mapping resource="courseregistrationsystem/entity/Class.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
